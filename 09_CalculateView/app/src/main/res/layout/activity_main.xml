<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00ffff"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="#1822DA"
            android:textColor="#ffffff"
            android:textSize="40dp"
            android:text="123,456,789 "
            android:gravity="center_vertical|right"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <Button
            android:id="@+id/btnCE"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A1A1A1"
            android:text="CE"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnC"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A1A1A1"
            android:text="C"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnDEL"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A1A1A1"
            android:text="DEL"
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btnPOW"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A1A1A1"
            android:text="POW"
            android:textColor="#000000"
            android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn7"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A1A1A1"
            android:text="7"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/btn8"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A1A1A1"
            android:text="8"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/btn9"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A1A1A1"
            android:text="9"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/btn"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A1A1A1"
            android:text="+"
            android:textSize="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn4"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A1A1A1"
            android:text="4"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/btn5"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A1A1A1"
            android:text="5"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/btn6"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A1A1A1"
            android:text="6"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/btnMin"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A1A1A1"
            android:text="-"
            android:textSize="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A1A1A1"
            android:text="1"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A1A1A1"
            android:text="2"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/btn3"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A1A1A1"
            android:text="3"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/btnMul"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A1A1A1"
            android:text="*"
            android:textSize="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn0"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A1A1A1"
            android:text="0"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A1A1A1"
            android:text="."
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/btnEqual"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A1A1A1"
            android:text="="
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textColor="#000000"
            android:layout_marginRight="5dp"
            android:backgroundTint="#A1A1A1"
            android:text="/"
            android:textSize="15dp"
            />

    </LinearLayout>
</LinearLayout>