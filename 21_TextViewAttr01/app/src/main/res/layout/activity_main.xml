<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="----수평 입력 길이----"
      />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Normal"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scroll Horizontal"
        android:scrollbars="vertical"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Single Line"
        android:singleLine="true"
      />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="aeiou"
        android:digits="aeiou"
      />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1234"
      android:inputType="number"
      />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:inputType="textPassword"
      />

  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:selectAllOnFocus="true"
      android:text="selectAllOnFocus"
      />

  <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="auto link test. http://www.naver.com naver home page. aaa@bbb.com mail address
                      +82 10 44226610"
      android:autoLink="web|email|phone"
    />


</LinearLayout>